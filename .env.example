# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
SOLSCAN_API_KEY=your_solscan_api_key
INFURA_API_KEY=your_infura_api_key
ALCHEMY_API_KEY=your_alchemy_api_key

# Security Settings
MAX_SLIPPAGE=0.5  # Default max slippage in percentage
GAS_MULTIPLIER=1.1  # Default gas price multiplier
MEV_PROTECTION=true  # Enable/disable MEV protection
MAX_GAS_PRICE=100  # Maximum gas price in gwei
PRIORITY_GAS_PRICE=5  # Priority gas price in gwei

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/goat.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_ROTATION=1d  # Log rotation period

# Cache Settings
CACHE_DURATION=3600  # Cache duration in seconds
REDIS_URL=redis://localhost:6379  # Optional: Redis cache URL
REDIS_PASSWORD=your_redis_password  # Optional: Redis password
REDIS_DB=0  # Redis database number

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # Requests per window
RATE_LIMIT_WINDOW=60  # Window in seconds
RATE_LIMIT_STRATEGY=fixed  # Options: fixed, sliding

# Advanced Features
ENABLE_ANALYTICS=true  # Enable/disable analytics collection
MAX_CONCURRENT_REQUESTS=10  # Maximum concurrent API requests
REQUEST_TIMEOUT=30  # API request timeout in seconds
RETRY_ATTEMPTS=3  # Number of retry attempts
RETRY_DELAY=1  # Delay between retries in seconds
WEBSOCKET_PING_INTERVAL=30  # WebSocket ping interval in seconds
WEBSOCKET_RECONNECT_ATTEMPTS=5  # WebSocket reconnection attempts

# Development Settings
DEBUG_MODE=false  # Enable/disable debug mode
TEST_MODE=false  # Enable/disable test mode
MOCK_EXTERNAL_APIS=false  # Use mock responses for external APIs in tests
TEST_PRIVATE_KEY=your_test_private_key  # Test wallet private key
TEST_WALLET_ADDRESS=your_test_wallet_address  # Test wallet address
